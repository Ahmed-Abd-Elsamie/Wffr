<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activities.ChangePasswordActivity"
        android:orientation="vertical"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorPrimaryDark"

            >

            <ImageButton
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/ic_baseline_arrow_back_24"
                android:id="@+id/btn_back"
                android:layout_margin="15dp"
                android:rotation="180"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ch_pass"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/cairosemibold"

                />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/ic_lock_white"
                android:id="@+id/aaaa"
                android:layout_margin="15dp"

                />



        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:background="@drawable/input_text"
                        android:layout_margin="10dp"
                        android:id="@+id/old_pass_container"

                        >
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            app:srcCompat="@drawable/ic_outline_lock_35"
                            android:layout_gravity="center"/>
                        <EditText
                            android:id="@+id/txt_old_pass"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/old_pass"
                            android:layout_marginLeft="15dp"
                            android:background="#00000000"
                            android:textSize="16dp"
                            android:inputType="textPassword"
                            android:fontFamily="@font/cairosemibold"
                            android:gravity="right"
                            android:layout_marginRight="5dp"
                            android:textColorHint="#8E8E8E"
                            android:layout_weight="1"

                            />

                        <ImageView
                            android:id="@+id/btn_show_pass"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/ic_baseline_visibility_off_35"

                            />

                        <ImageView
                            android:id="@+id/btn_hide_pass"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:visibility="gone"
                            app:srcCompat="@drawable/ic_baseline_visibility_35"

                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:background="@drawable/input_text"
                        android:layout_margin="10dp"
                        android:layout_below="@+id/old_pass_container"

                        >
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            app:srcCompat="@drawable/ic_outline_lock_35"
                            android:layout_gravity="center"/>
                        <EditText
                            android:id="@+id/txt_new_pass"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/new_pass"
                            android:layout_marginLeft="15dp"
                            android:background="#00000000"
                            android:textSize="16dp"
                            android:inputType="textPassword"
                            android:fontFamily="@font/cairosemibold"
                            android:gravity="right"
                            android:layout_marginRight="5dp"
                            android:textColorHint="#8E8E8E"
                            android:enabled="false"

                            />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:background="@drawable/input_text"
                        android:layout_margin="10dp"
                        android:layout_below="@+id/old_pass_container"

                        >
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            app:srcCompat="@drawable/ic_outline_lock_35"
                            android:layout_gravity="center"/>
                        <EditText
                            android:id="@+id/txt_confirm_pass"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/conf_pass"
                            android:layout_marginLeft="15dp"
                            android:background="#00000000"
                            android:textSize="16dp"
                            android:inputType="textPassword"
                            android:fontFamily="@font/cairosemibold"
                            android:gravity="right"
                            android:layout_marginRight="5dp"
                            android:textColorHint="#8E8E8E"
                            android:enabled="false"

                            />

                    </LinearLayout>


                    <Button
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="15dp"
                        android:text="@string/save"
                        android:id="@+id/btn_save"
                        android:background="@drawable/btn_design"
                        android:fontFamily="@font/cairosemibold"

                        />

                </LinearLayout>

            </ScrollView>




            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progress_bar"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:visibility="gone"

                />


        </RelativeLayout>


    </LinearLayout>


</layout>