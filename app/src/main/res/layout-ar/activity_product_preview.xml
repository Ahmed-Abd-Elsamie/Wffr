<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activities.ProductPreviewActivity"

        >

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="true"
            android:id="@+id/nested_scroll"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"

                >

                <androidx.coordinatorlayout.widget.CoordinatorLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    >

                    <LinearLayout
                        android:id="@+id/img_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_anchorGravity="bottom|center"
                        android:layout_marginBottom="70dp"
                        android:paddingBottom="60dp"

                        >


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:orientation="vertical"
                            app:cardCornerRadius="30dp"
                            android:layout_marginTop="-30dp"


                            >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="250dp"

                                >

                                <ImageView
                                    android:id="@+id/img_shop"
                                    android:layout_width="match_parent"
                                    android:layout_height="250dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/logo"
                                    android:layout_marginTop="30dp"

                                    />

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="250dp"
                                    android:background="#6D000000"
                                    android:scaleType="centerCrop"
                                    android:layout_marginTop="30dp"

                                    />





                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginTop="30dp"

                                >

                                <LinearLayout
                                    android:id="@+id/top_bar"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:orientation="horizontal"

                                    >

                                    <TextView
                                        android:id="@+id/txt_title"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_margin="10dp"
                                        android:layout_weight="1"
                                        android:gravity="right"
                                        android:text=""
                                        android:textColor="@color/white"
                                        android:textSize="30dp"
                                        android:textStyle="bold"
                                        android:fontFamily="@font/cairosemibold"


                                        />

                                    <ImageView
                                        android:id="@+id/btn_add_fav"
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:layout_margin="10dp"
                                        android:background="@drawable/category_design"
                                        android:elevation="10dp"
                                        android:padding="10dp"
                                        android:src="@drawable/img_fav"

                                        />

                                    <ImageView
                                        android:id="@+id/btn_back"
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:layout_margin="10dp"
                                        android:background="@drawable/category_design"
                                        android:elevation="10dp"
                                        android:padding="10dp"
                                        android:src="@drawable/img_back"

                                        />


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/top_bar"
                                    android:orientation="horizontal"

                                    >


                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_margin="10dp"
                                        android:src="@drawable/category"

                                        />

                                    <TextView
                                        android:id="@+id/txt_category_title"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:gravity="right"
                                        android:text=""
                                        android:textColor="@color/white"
                                        android:textSize="20dp"
                                        android:fontFamily="@font/cairosemibold"


                                        />


                                </LinearLayout>


                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal"

                            >

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_margin="10dp"
                                android:src="@drawable/img_info"

                                />

                            <TextView
                                android:id="@+id/txt_desc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginBottom="5dp"
                                android:fontFamily="@font/cairosemibold_0"
                                android:gravity="right"
                                android:text=""

                                />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal"

                            >

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_margin="10dp"
                                android:src="@drawable/img_info"

                                />

                            <TextView
                                android:id="@+id/txt_expire"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginBottom="5dp"
                                android:fontFamily="@font/cairosemibold_0"
                                android:gravity="right"
                                android:text=""

                                />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal"
                            android:id="@+id/container1"
                            android:visibility="gone"

                            >

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_margin="10dp"
                                android:src="@drawable/usd"

                                />

                            <TextView
                                android:id="@+id/txt_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginBottom="5dp"
                                android:fontFamily="@font/cairosemibold_0"
                                android:gravity="right"
                                android:text="@string/price"

                                />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal"
                            android:id="@+id/container2"
                            android:visibility="gone"

                            >

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_margin="10dp"
                                android:src="@drawable/usd"

                                />

                            <TextView
                                android:id="@+id/txt_price_discount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginBottom="5dp"
                                android:fontFamily="@font/cairosemibold_0"
                                android:gravity="right"
                                android:text="@string/after_discount"

                                />


                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/btn_branches"

                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"

                                >

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="10dp"
                                    android:src="@drawable/back_arrow"

                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/branches"
                                    android:layout_margin="10dp"
                                    android:textColor="@color/black"
                                    android:textSize="20dp"
                                    android:fontFamily="@font/cairosemibold"

                                    />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            >

                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/recycler_location"
                                android:paddingRight="10dp"
                                android:clipToPadding="true"
                                android:paddingBottom="10dp"
                                android:paddingLeft="10dp"
                                android:paddingTop="10dp"
                                android:visibility="gone"


                                />

                            <ProgressBar
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:id="@+id/prog_loc"
                                android:background="@drawable/progress_bg"
                                android:padding="5dp"
                                android:elevation="10dp"
                                android:layout_margin="10dp"

                                />



                        </RelativeLayout>



                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:id="@+id/btn_cobun"
                        android:elevation="10dp"
                        android:orientation="horizontal"
                        app:layout_anchor="@+id/img_header"
                        app:layout_anchorGravity="bottom|center"
                        android:background="@drawable/coupon_bg"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"

                        >


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:gravity="center"

                            >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"

                                >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/up_to"
                                    android:textSize="25dp"
                                    android:textColor="@color/white"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:fontFamily="@font/cairosemibold"
                                    android:visibility="gone"

                                    />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="%"
                                    android:textSize="30dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:id="@+id/txt_discount"
                                    android:fontFamily="@font/cairosemibold"
                                    android:visibility="gone"

                                    />

                            </LinearLayout>

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="70dp"
                                android:background="#fff"
                                android:elevation="5dp"
                                android:visibility="gone"

                                />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"

                                >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/coupon"
                                    android:textSize="20dp"
                                    android:textColor="@color/white"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/cairosemibold"

                                    />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"

                                >

                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:src="@drawable/coupon_img"
                                    android:background="@drawable/icon_bg"
                                    android:padding="10dp"

                                    />



                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>

                </androidx.coordinatorlayout.widget.CoordinatorLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="15dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center"

                        >

                        <fragment
                            android:id="@+id/map"
                            android:name="com.google.android.gms.maps.SupportMapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="400dp"

                            />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </FrameLayout>

</layout>