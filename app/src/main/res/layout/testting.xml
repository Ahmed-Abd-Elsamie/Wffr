<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"

        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/rectanglar_ed_text_account"
            android:elevation="10dp"
            android:layout_margin="10dp"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairobold0"
                android:text="@string/clothes"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/progress_clothes"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />


            <ProgressBar
                android:id="@+id/progress_clothes"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:indeterminate="false"
                android:max="100"
                android:progress="70"
                android:progressDrawable="@drawable/circular3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="70"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/progress_clothes"
                app:layout_constraintEnd_toEndOf="@+id/progress_clothes"
                app:layout_constraintStart_toStartOf="@+id/progress_clothes"
                app:layout_constraintTop_toTopOf="@+id/progress_clothes"
                android:textColor="@color/black"
                android:id="@+id/txt_clothes_prog"

                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/rectanglar_ed_text_account"
            android:elevation="10dp"
            android:layout_margin="10dp"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairobold0"
                android:text="@string/shoes"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/progress_shoes"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />


            <ProgressBar
                android:id="@+id/progress_shoes"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:indeterminate="false"
                android:max="100"
                android:progress="30"
                android:progressDrawable="@drawable/circular2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/progress_shoes"
                app:layout_constraintEnd_toEndOf="@+id/progress_shoes"
                app:layout_constraintStart_toStartOf="@+id/progress_shoes"
                app:layout_constraintTop_toTopOf="@+id/progress_shoes"
                android:textColor="@color/black"
                android:id="@+id/txt_shoes_prog"

                />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/rectanglar_ed_text_account"
            android:elevation="10dp"
            android:layout_margin="10dp"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairobold0"
                android:text="@string/resturants"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/progress_restaurants"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />


            <ProgressBar
                android:id="@+id/progress_restaurants"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:indeterminate="false"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/circular3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/progress_restaurants"
                app:layout_constraintEnd_toEndOf="@+id/progress_restaurants"
                app:layout_constraintStart_toStartOf="@+id/progress_restaurants"
                app:layout_constraintTop_toTopOf="@+id/progress_restaurants"
                android:textColor="@color/black"
                android:id="@+id/txt_restaurants_prog"

                />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

</LinearLayout>